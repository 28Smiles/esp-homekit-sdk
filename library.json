{
    "name": "esp-homekit-sdk",
    "version": "0.0.1",
    "description": "ESP HomeKit SDK has been developed in-house by Espressif to build Apple HomeKit compatible accessories using ESP32/ESP32-S2/ESP32-C3/ESP8266 SoCs.",
    "keywords": "espressif, esp32, esp32-s2, esp32-c3, esp8266, homekit",
    "repository": {
        "type": "git",
        "url": "https://github.com/schphil/esp-homekit-sdk.git"
    },
    "authors": [
        {
            "name": "Philipp Scheff",
            "email": "philippscheff@me.com"
        }
    ],
    "build": {
        "flags": [
                "-Ilib",
                "-Icomponents/homekit/esp_hap_extras/include",
                "-Icomponents/homekit/esp_hap_platform/include",
                "-Icomponents/homekit/esp_hap_apple_profiles/include",
                "-Icomponents/homekit/esp_hap_core/include",
                "-Icomponents/button/button/include",
                "-Icomponents/homekit/hkdf-sha/include",
                "-Icomponents/common/qrcode/include",
                "-Icomponents/homekit/esp_hap_core/src/priv_includes",
                "-Icomponents/homekit/json_parser/upstream/include",
                "-Icomponents/homekit/json_generator/upstream",
                "-Icomponents/homekit/json_parser/upstream",
                "-Icomponents/homekit/mu_srp",
                "-Icomponents/common/app_wifi",
	            "-Icomponents/common/app_hap_setup_payload",
	            "-Icomponents/common/qrcode/include"
                                
        ],
        "includeDir": ".",
        "srcDir": "."
    },
    "frameworks": "espidf",
    "platforms": "espressif32"
}
